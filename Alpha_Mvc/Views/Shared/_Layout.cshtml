<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Alpha_Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <div class="container">            
            <header>
                <div class="topbar">
                    <form class="search-form" action="" method="">
                        <input class="search-input" name="query" type="text" placeholder="Search..." />
                    </form>
                    <div class="user-menu">
                        <img src="/images/Icons/Notification_inactive.svg" class="notification" />
                        <img src="/images/Icons/Settings.svg" class="settings" />
                        <div class="stroke">|</div>
                        <img src="/images/Profiles/Img_profile_1.svg" class="profile-small" />
                    </div>
                </div>
            </header>

            <aside class="sidebar">
                <a class="logo" asp-action="Index" asp-controller="Home">
                    <img src="/images/Icons/Logo.svg" alt="">
                    <p class="logo-text">alpha</p>
                </a>
                <a class="link @(Context.Request.Path == "/" ? "active" : "")" asp-action="Index" asp-controller="Home">
                    <i class="fa-solid fa-briefcase"></i>
                    Projects
                </a>
                <a class="link @(Context.Request.Path == "/admin" ? "active" : "")" asp-action="Index" asp-controller="Admin">
                    <i class="fa-solid fa-user"></i>
                    Team Members
                </a>
            </aside>
            
            <main>
                <div class="main-container">
                    <div class="top">
                        <h2>@ViewData["Header"]</h2>
                        <button class="btn">
                            <i class="fa-solid fa-plus"></i>
                            <span>Add Project</span>
                        </button>
                    </div>
                    @RenderBody()   
                </div>
            </main>        
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
