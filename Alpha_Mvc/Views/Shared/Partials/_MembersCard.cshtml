@await Html.PartialAsync("Sections/_EditMemberSection", Model)

<div class="card">
    <div class="dropdown-container">
        <img id="menu-button" class="options" src="/images/Icons/Dots.svg" alt="An image of three dots.">
        <div class="dropdown-content">
            <a class="menu-option option-edit" data-member-id="@Model.Id" data-modal="true" data-target="#editMemberModal_@Model.Id">Edit Member</a>
            <div class="stroke"></div>
            <form class="dropdown-form" asp-action="DeleteMember" asp-route-id="@Model.Id" asp-controller="Admin">
                <button type="submit" class="menu-option option-delete">Delete Member</button>                
            </form>
        </div>
    </div>

    <img class="profile" src="@Model.ImageUrl" alt="A profile picture.">
    <div class="member-info">
        <h4>@Model.FirstName @Model.LastName</h4>
        <p class="role">@Model.JobTitle</p>
        <div class="contact-info">
            <p>@Model.Email</p>
            <p>@Model.PhoneNumber</p>
        </div>
        <div class="btn message">Message</div>
    </div>
</div>
