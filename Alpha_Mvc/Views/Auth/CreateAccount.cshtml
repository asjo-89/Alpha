@model CreateAccountModel

@{
    Layout = "_SigninLayout";
    ViewData["Action"] = "Sign up";
    ViewData["Css"] = "~/css/projectForms.css";
}

<div class="container" id="sign-up">
    <h1 class="title title-create">Create Account</h1>
    @await Html.PartialAsync("Components/_GoogleButton", ViewData["Action"])
    <div class="alternative">
        <div class="line"></div>
        <span class="or">OR</span>
        <div class="line"></div>
    </div>
    <form class="login-form" id="sign-up-form" method="post" asp-action="CreateAccount" asp-controller="Auth" novalidate>

        <div class="form-inputs-container">
            <div class="form-group">
                <div class="input-container">
                    <label class="label" asp-for="FirstName"></label>
                    <input type="text" class="input first-input" asp-for="FirstName" />
                    <span class="span-1" asp-validation-for="FirstName"></span>
                </div>

                <div class="input-container">
                    <label class="label" asp-for="LastName"></label>
                    <input type="text" class="input last-input" asp-for="LastName" />
                    <span class="span-2" asp-validation-for="LastName"></span>
                </div>
            </div>

            <div class="input-container">
                <label class="label" asp-for="Email"></label>
                <input type="text" class="input" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>        

            <div class="form-group">
                <div class="input-container">
                    <label class="label" asp-for="Password"></label>
                    <input id="password" type="password" class="input first-input" asp-for="Password" />
                    <span id="psw-validation-create" asp-validation-for="Password"></span>
                </div>

                <div class="input-container">
                    <label class="label" asp-for=ConfirmPassword></label>
                    <input type="password" class="input last-input" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>
        </div>
        <ul id="rules-list-create" class="rules-list">
            <li data-rule="length" class="field-validation-error">Must be 8 characters long</li>
            <li data-rule="upper" class="field-validation-error">Must have one upper case letter</li>
            <li data-rule="lower" class="field-validation-error">Must have one lower case letter</li>
            <li data-rule="digit" class="field-validation-error">Must have one digit</li>
            <li data-rule="special" class="field-validation-error">Must have one special character (#?!&#64;$%^&*-)</li>
        </ul>

        <div class="form-group-check">
            <div class="checkbox-group">
                <input type="checkbox" asp-for="TermsAndConditions" id="checkbox" />
                <label class="checkmark" for="checkbox"></label>
                <span>I accept <a href="#" class="forgot">Terms and Conditions</a></span>
            </div>
            <span asp-validation-for="TermsAndConditions"></span>
        </div>

        <button type="submit" class="btn">
            <span>Create Account</span>
        </button>
    </form>

    <div class="group-signup">
        <p>Already have an account?</p>
        <a asp-action="SignIn" asp-controller="Auth" class="sign-up">Log in</a>
    </div>
</div>



@section Scripts {
    <script src="~/js/validations.js" asp-append-version="true"></script>
}